{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "types": [
            "vite/client",
            "svelte"
        ]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        "src/**/*.svelte.ts"
    ]
}